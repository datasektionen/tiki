<!-- Main -->
<div class="bg-background flex min-h-screen w-full flex-col">
  <!-- sidebar -->
  <aside class="bg-muted/40 fixed inset-y-0 left-0 z-50 hidden w-72 flex-col border-r sm:flex">
    <%= sidebar(assigns) %>
  </aside>
  <div class="flex flex-col py-4 sm:gap-4 sm:py-8 sm:pl-72">
    <div class="mx-auto w-full max-w-7xl px-4 sm:px-6">
      <%= nav_header(assigns) %>
    </div>
    <main class="mx-auto w-full max-w-7xl px-4 py-6 sm:px-6 sm:py-4">
      <%= @inner_content %>
    </main>
  </div>
</div>

<.flash_group flash={@flash} />
